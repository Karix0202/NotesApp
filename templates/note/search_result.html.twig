{% extends 'base.html.twig' %}

{% block title %}Search results | NotesApp{% endblock %}

{% block container %}
    {% if notes and error == 0 %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for note in notes %}
                <div class="col">
                    {{ include('note/note_card.html.twig', {note: note}) }}
                </div>
            {% endfor %}
        </div>
    {% elseif error == 0 %}
        <h2>No results</h2>
    {% else %}
        <h2>Something went wrong...</h2>
    {% endif %}
{% endblock %}